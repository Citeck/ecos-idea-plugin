<idea-plugin>
    <id>ru.citeck.ecos-dev-plugin</id>
    <name>Ecos Idea plugin</name>
    <vendor email="" url="http://citeck.ru">Citeck</vendor>

    <description>Ecos Idea plugin</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>

        <action id="Ecos.ExecuteAlfrescoJsAll" class="ru.citeck.actions.ExecuteJavaScriptCode"
                text="Execute Afresco JS"
                description="Execute Alfresco JS" icon="AllIcons.Actions.Execute">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt E" second-keystroke="E"/>
            <add-to-group group-id="EditorContextBarMenu" anchor="last"/>
        </action>

        <action id="Ecos.UploadFileToServer" class="ru.citeck.actions.UploadFileToServer"
                text="Upload file to server"
                description="Upload file to server" icon="AllIcons.Actions.Uninstall">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt E" second-keystroke="U"/>
            <add-to-group group-id="EditorContextBarMenu" anchor="last"/>
        </action>

        <action id="Ecos.DownloadFileFromServer" class="ru.citeck.actions.DownloadFileFromServer"
                text="Download file from server"
                description="Download file from server" icon="AllIcons.Actions.Install">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt E" second-keystroke="D"/>
            <add-to-group group-id="EditorContextBarMenu" anchor="last"/>
        </action>

        <group id="ru.citeck.actions.EcosEditorPopupMenu" text="ECOS" popup="true" icon="EcosIcons.CiteckLogo">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="Ecos.EditJsonString" class="ru.citeck.actions.EditJsonStringAsJS" text="Edit attribute as JavaScript"
                    description="Edit attribute as JavaScript" icon="AllIcons.FileTypes.JavaScript">
            </action>
            <group id="ru.citeck.actions.EcosUtf16Converter" text="UTF-16" popup="true" icon="AllIcons.FileTypes.Text">
                <action id="Ecos.EncodeUtf16" class="ru.citeck.actions.Utf16Encoder" text="Encode to UTF-16"
                        description="Encode to UTF-16" icon="AllIcons.FileTypes.Text">
                </action>
                <action id="Ecos.DecodeUtf16" class="ru.citeck.actions.Utf16Decoder" text="Decode from UTF-16"
                        description="Decode from UTF-16" icon="AllIcons.FileTypes.Text">
                </action>
            </group>
        </group>


    </actions>
</idea-plugin>